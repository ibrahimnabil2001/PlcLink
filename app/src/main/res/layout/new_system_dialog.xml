<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >





        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/new_system_name_edit"
            android:hint="@string/system_name_hint"
            android:layout_margin="@dimen/sub_header_padding"
            android:textSize="@dimen/sub_header_text"/>



        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/new_system_location_edit"
            android:hint="@string/system_location_hint"
            android:layout_margin="@dimen/sub_header_padding"
            android:textSize="@dimen/sub_header_text"
            />



</LinearLayout>